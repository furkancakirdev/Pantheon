// Prisma Schema - InvestorAgent
// SQLite veritabanı için veri modelleri

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ===== HİSSE SENETLERİ =====

model Stock {
  id            Int       @id @default(autoincrement())
  kod           String    @unique
  ad            String
  sektor        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  fundamentals  Fundamental[]
  scores        Score[]
  alerts        Alert[]
  analyses      Analysis[]
  councilDecisions CouncilDecision[]
}

// Temel veriler (İş Yatırım API'den)
model Fundamental {
  id            Int       @id @default(autoincrement())
  stockId       Int
  stock         Stock     @relation(fields: [stockId], references: [id])
  
  kapanis       Float?
  fk            Float?    // Fiyat/Kazanç
  pddd          Float?    // PD/DD
  fdFavok       Float?    // FD/FAVÖK
  roe           Float?    // Özkaynak Karlılığı
  borcOzkaynak  Float?    // Borç/Özkaynak
  piyasaDegeri  Float?    // Piyasa Değeri
  yabanciOran   Float?    // Yabancı Oranı
  
  tarih         DateTime  @default(now())
  
  @@index([stockId, tarih])
}

// Analiz skorları
model Score {
  id            Int       @id @default(autoincrement())
  stockId       Int
  stock         Stock     @relation(fields: [stockId], references: [id])
  
  erdincSkor    Int?      // Yaşar Erdinç skoru (0-100)
  wonderkidSkor Int?      // Wonderkid skoru (0-100)
  teknikSinyal  String?   // AL, SAT, BEKLE
  
  gerekceler    String?   // JSON string
  uyarilar      String?   // JSON string
  
  tarih         DateTime  @default(now())
  
  @@index([stockId, tarih])
}

// ===== FONLAR (TEFAS) =====

model Fund {
  id            Int       @id @default(autoincrement())
  kod           String    @unique
  ad            String
  tur           String?   // Fon türü
  kurucu        String?   // Kurucu şirket
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  returns       FundReturn[]
}

model FundReturn {
  id              Int       @id @default(autoincrement())
  fundId          Int
  fund            Fund      @relation(fields: [fundId], references: [id])
  
  gunlukGetiri    Float?
  haftalikGetiri  Float?
  aylikGetiri     Float?
  yillikGetiri    Float?
  fonBuyuklugu    Float?
  
  tarih           DateTime  @default(now())
  
  @@index([fundId, tarih])
}

// ===== SENTİMENT =====

model SentimentData {
  id            Int       @id @default(autoincrement())
  kaynak        String    // twitter, youtube, haber
  hesap         String?   // @username
  icerik        String    // Tweet/haber metni
  skor          Float?    // -1 ile 1 arası
  label         String?   // POZITIF, NEGATIF, NOTR
  
  ilgiliHisse   String?   // Varsa ilgili hisse kodu
  
  tarih         DateTime  @default(now())
  
  @@index([kaynak, tarih])
  @@index([ilgiliHisse])
}

// ===== BİLDİRİMLER =====

model Alert {
  id            Int       @id @default(autoincrement())
  stockId       Int?
  stock         Stock?    @relation(fields: [stockId], references: [id])
  
  tip           String    // AL_SINYAL, SAT_SINYAL, WONDERKID, HABER
  baslik        String
  mesaj         String
  okundu        Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  
  @@index([okundu, createdAt])
}

// ===== PİYASA VERİLERİ =====

model MarketSnapshot {
  id            Int       @id @default(autoincrement())

  xu100         Float?
  xu100Degisim  Float?
  xu030         Float?
  xu030Degisim  Float?
  dolarTry      Float?
  euroTry       Float?
  altin         Float?

  tarih         DateTime  @default(now())

  @@index([tarih])
}

// ===== PORTFÖY YÖNETİMİ =====

// Kullanıcı portföyleri
model Portfolio {
  id            String    @id @default(cuid())
  isim          String    // Portföy adı (örn: "Ana Portföy", "BIST 100")
  aciklama      String?   // Portföy açıklaması
  bakiye        Float     @default(0) // Başlangıç bakiyesi (TL)
  durum         String    @default("AKTIF") // AKTIF, PASIF, KAPALI

  pozisyonlar    PortfolioPosition[]
  islemler       PortfolioTransaction[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([durum])
}

// Portföy pozisyonları (hisseler)
model PortfolioPosition {
  id            String    @id @default(cuid())
  portfolioId   String
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  hisseKod      String    // Hisse kodu (örn: THYAO)
  hisseAd       String?   // Hisse adı

  adet          Float     // Alınan/adet sayısı
  alimFiyati    Float     // Ortalama alış fiyatı
  toplamMaliyet  Float     // Toplam maliyet (adet * alış fiyatı)

  guncelFiyat   Float?    // Güncel fiyat
  guncelDeger   Float?    // Güncel değer (adet * güncel fiyat)
  karZarar      Float?    // Kar/Zarar (TL)
  karZararYuzde Float?    // Kar/Zarar %

  alimTarihi    DateTime  @default(now())
  satistami     Boolean   @default(false)
  satisTarihi   DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([portfolioId])
  @@index([hisseKod])
  @@index([satistami])
}

// Portföy işlemleri (alış/satış geçmişi)
model PortfolioTransaction {
  id            String    @id @default(cuid())
  portfolioId   String
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  hisseKod      String
  islemTipi     String    // ALIS, SATIS
  adet          Float
  fiyat         Float     // İşlem fiyatı
  toplam        Float     // İşlem tutarı

  not           String?   // İşlem notu

  createdAt     DateTime  @default(now())

  @@index([portfolioId])
  @@index([hisseKod])
  @@index([createdAt])
}

// ===== İZLEME LİSTESİ (WATCHLIST) =====

model Watchlist {
  id            String    @id @default(cuid())
  isim          String    // Liste adı (örn: "Favoriler", "Teknoloji")
  aciklama      String?

  ogeler        WatchlistItem[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model WatchlistItem {
  id            String    @id @default(cuid())
  watchlistId   String
  watchlist     Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)

  hisseKod      String    // Hisse kodu
  hisseAd       String?   // Hisse adı
  hedefFiyat    Float?    // Hedef fiyat
  alarmFiyat    Float?    // Alarm fiyatı
  notlar        String?   // Kullanıcı notları

  eklenmeTarihi DateTime  @default(now())

  @@unique([watchlistId, hisseKod])
  @@index([watchlistId])
  @@index([hisseKod])
}

// ===== GRAND COUNCIL =====

// Her analiz motorunun ayrı ayrı sonuçları
model Analysis {
  id           String    @id @default(cuid())
  stockKod     String
  stock        Stock     @relation(fields: [stockKod], references: [kod], onDelete: Cascade)

  moduleName   String    // Atlas, Orion, Wonderkid, Athena, Hermes, Aether, Phoenix
  verdict      String    // GÜÇLÜ AL, AL, TUT, SAT, GÜÇLÜ SAT
  confidence   Int       // 0-100
  details      Json?     // Detaylı veri (checklist, indicator results, etc.)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([stockKod, moduleName])
  @@index([createdAt])
}

// Grand Council'nin nihai kararı
model CouncilDecision {
  id             String    @id @default(cuid())
  stockKod       String
  stock          Stock     @relation(fields: [stockKod], references: [kod], onDelete: Cascade)

  finalVerdict   String    // AL, SAT, BEKLE
  consensus      Int       // 0-100, oy birliği yüzdesi
  votes          Json      // Tüm modül oyları
  aiExplanation  String?   // LLM ile üretilen açıklama

  createdAt      DateTime  @default(now())

  @@index([stockKod])
  @@index([createdAt])
}
