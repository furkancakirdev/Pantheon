{
  "name": "pantheon-trading-os",
  "version": "1.0.0",
  "description": "Pantheon Trading OS - Hibrit Yatırım Analiz Platformu",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "analyze": "tsx packages/analysis/index.ts",
    "fetch:isyatirim": "tsx packages/api-clients/isyatirim.ts",
    "fetch:tefas": "tsx packages/api-clients/tefas.ts"
  },
  "keywords": [
    "bist",
    "tefas",
    "stock",
    "analysis",
    "trading",
    "ai",
    "grand-council"
  ],
  "author": "Furkan Çakır",
  "license": "MIT",
  "devDependencies": {
    "@prisma/adapter-d1": "^7.3.0",
    "@prisma/client": "^6.19.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "jest": "^30.2.0",
    "prisma": "^6.19.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ioredis": "^5.9.2",
    "node-cron": "^4.2.1"
  },
  "engines": {
    "node": "20.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.0"
}
